
<h1>Editing Profile for <%= @user.username.capitalize %></h1>

<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :country_of_origin %><br>
  <%= f.text_field :country_of_origin %>
</div>

<div class="field">
  <%= f.label :about %><br>
  <%= f.text_area :about %>
</div>

<div class="field">
  <%= f.label :gender %><br>
  <%= f.select :gender, User.genders %>
</div>

<div class="actions">
  <%= f.submit "Edit Profile" %>
</div>

<% end %>
